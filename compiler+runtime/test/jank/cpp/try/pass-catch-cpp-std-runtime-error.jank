;; Test catching std::runtime_error
(cpp/raw "namespace jank::cpp::try_::pass_catch_cpp_std_runtime_error
          {
            void throw_runtime_error() { throw std::runtime_error(\"runtime error\"); }
          }")

(let [caught (atom nil)]
  (try
    (cpp/jank.cpp.try_.pass_catch_cpp_std_runtime_error.throw_runtime_error)
    (catch cpp/std.logic_error e)
    (catch cpp/std.runtime_error e
      (reset! caught (cpp/.what e))))
  (assert (= "runtime error" @caught) "Should have caught std::runtime_error with correct message"))

:success
