;; Test catching std::logic_error
(cpp/raw "void throw_logic_error() { throw std::logic_error(\"logic error\"); }")

(let [caught (atom false)]
  (try
    (cpp/throw_logic_error)
    (catch cpp/std.runtime_error e
      (println "Wrong: caught runtime_error"))
    (catch cpp/std.logic_error e
      (reset! caught true)))
  (assert @caught "Should have caught std::logic_error"))

:success
