;; Test catching std::exception base class (with implicit reference promotion)
(cpp/raw "namespace pass_catch_cpp_std_exception
          {
            void throw_runtime_error_as_exception() { throw std::runtime_error(\"derived error\"); }
          }")

(try
  (cpp/pass_catch_cpp_std_exception.throw_runtime_error_as_exception)
  (catch cpp/std.exception e
    (assert (= "derived error" (cpp/.what e)))
    :success))
